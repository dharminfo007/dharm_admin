<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llContactUs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvProId"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="2dp"
        android:layout_marginLeft="0dp"
        android:layout_toLeftOf="@+id/llCenter"
        android:gravity="center|start"
        android:lines="2"
        android:text="1100"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llCenter"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tvQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="normal"
            tools:text="20 cartoons" />

        <View
            android:id="@+id/viewsepretor"
            android:layout_toRightOf="@+id/tvQty"
            android:layout_centerInParent="true"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/black" />

        <TextView
            android:layout_toRightOf="@+id/viewsepretor"
            android:layout_centerInParent="true"
            android:id="@+id/tvUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="normal"
            tools:text="20 in stocks" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="120"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"/>


</RelativeLayout>