<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:labelFor="@+id/cardProducts"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="0.5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvDealStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/green_bg"
        android:gravity="center|right"
        android:layout_gravity="right"
        android:paddingVertical="5dp"
        android:paddingHorizontal="5dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal"
        android:text="Pending"/>

    <RelativeLayout
        android:id="@+id/llContactUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tvProId"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="2dp"
        android:layout_marginLeft="0dp"
        android:layout_toLeftOf="@+id/llCenter"
        android:gravity="center|start"
        android:lines="2"
        android:maxLines="2"
        android:text="1100"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llCenter"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tvQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="normal"
            tools:text="20 cartoons" />

        <View
            android:id="@+id/viewsepretor"
            android:layout_toRightOf="@+id/tvQty"
            android:layout_centerInParent="true"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/black" />

        <TextView
            android:layout_toRightOf="@+id/viewsepretor"
            android:layout_centerInParent="true"
            android:id="@+id/tvUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="normal"
            tools:text="20 in stocks" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="120"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rvProductItems"
        android:layout_gravity="center"
        android:layout_margin="5dp">

        <View
            android:id="@+id/viewSpliter"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/black"
            android:alpha="0.8"/>

        <TextView
            android:id="@+id/tvCancelDeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="2dp"
            android:gravity="center|start"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="Cancel Deal"
            android:paddingVertical="5dp"
            android:paddingHorizontal="5dp"
            android:layout_below="@+id/viewSpliter"
            android:background="@drawable/red_bg"/>

        <TextView
            android:id="@+id/tvAcceptDeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="2dp"
            android:background="@drawable/green_bg"
            android:gravity="center|start"
            android:paddingVertical="5dp"
            android:paddingHorizontal="5dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="Accept Deal"
            android:layout_below="@+id/viewSpliter"/>

    </RelativeLayout>
</LinearLayout></androidx.cardview.widget.CardView>