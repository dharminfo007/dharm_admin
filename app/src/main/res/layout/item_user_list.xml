<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llContactUs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/llOnSale"
    android:layout_gravity="center"
    android:labelFor="@+id/cardProducts"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="0.5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/rlTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/light_brown">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:padding="5dp"
                    android:gravity="center|start"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text=""
                    android:drawableLeft="@drawable/ic_phone_login"
                    android:drawablePadding="10dp"/>

                <TextView
                    android:id="@+id/tvUserAddress"
                    android:layout_below="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="2dp"
                    android:padding="5dp"
                    android:gravity="center|start"
                    android:lines="2"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text=""
                    android:drawableLeft="@drawable/ic_location_login"
                    android:drawablePadding="10dp"/>

        </RelativeLayout>

</androidx.cardview.widget.CardView>